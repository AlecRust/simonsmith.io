<article class="excerpt post-excerpt">
    <h1 class="hdr hdr-excerpt"><a href="{{url}}" class="ajax">{{{title}}}</a></h1>
    <p>{{{excerpt}}}</p>
    {{#has_date}}<time datetime="{{w3c_date}}">{{date}}</time>{{/has_date}}
    {{#has_image}}<a href="{{url}}" class="work-img work-img-mini">{{{image}}}</a>{{/has_image}}
</article>
